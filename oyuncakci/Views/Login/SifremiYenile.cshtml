@model oyuncakci.Models.USER
@{
    ViewBag.Title = "SifremiYenile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SifremiYenile</h2>


@using (Html.BeginForm("SifremiYenile", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

